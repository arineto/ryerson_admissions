<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.p15media.ryersonUniversityAdmissions"
    android:versionCode="5"
    android:versionName="1.4" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Base"
        android:largeHeap="true" >
        <activity
            android:name="com.p15media.ryersonUniversityAdmissions.HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.p15media.ryersonUniversityAdmissions.CampusTourActivity"
            android:label="@string/title_activity_campus_tour"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.p15media.ryersonUniversityAdmissions.PhotoGalleryActivity"
            android:label="@string/title_activity_photo_gallery"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.p15media.ryersonUniversityAdmissions.VideoGalleryActivity"
            android:label="@string/title_activity_video_gallery"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.p15media.ryersonUniversityAdmissions.BuildingsActivity"
            android:label="@string/title_activity_buildings"
            android:screenOrientation="nosensor"
	        android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name="com.p15media.ryersonUniversityAdmissions.ConnectActivity"
            android:label="@string/title_activity_connect" 
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
