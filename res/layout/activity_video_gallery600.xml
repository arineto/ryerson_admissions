<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/videogallerybg"
    tools:context="com.p15media.ryersonuniversityadmissions.VideoGalleryActivity$PlaceholderFragment" >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="50dp"
        android:onClick="openAdmissionsPage"
        android:src="@drawable/admissionspage" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="50dp"
        android:onClick="openCampusLife"
        android:src="@drawable/campuslife" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="50dp"
        android:onClick="openHowTo"
        android:src="@drawable/howto" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp"
        android:onClick="openMakeYourMark"
        android:src="@drawable/makeyourmark" />

</RelativeLayout>