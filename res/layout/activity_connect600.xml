<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/connect_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/connectbg"
    tools:context="${packageName}.${activityClass}" >

    <ImageView
        android:id="@+id/lines"
        android:layout_width="450dp"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/lines" />

    <ImageView
        android:id="@+id/snapchat_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/lines"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="37dp"
        android:layout_marginLeft="62dp"
        android:onClick="openSnapchat"
        android:src="@drawable/snapchat_icon" />

    <ImageView
        android:id="@+id/vine_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/twitter_icon"
        android:layout_marginBottom="26dp"
        android:layout_toRightOf="@+id/snapchat_icon"
        android:onClick="openVIne"
        android:src="@drawable/vine_icon" />

    <ImageView
        android:id="@+id/news_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/vine_icon"
        android:layout_alignLeft="@+id/facebook_icon"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="68dp"
        android:onClick="openNews"
        android:src="@drawable/newsletter_icon" />

    <ImageView
        android:id="@+id/twitter_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignRight="@+id/lines"
        android:layout_below="@+id/lines"
        android:layout_marginRight="29dp"
        android:onClick="openTwitter"
        android:src="@drawable/twitter_icon" />

    <ImageView
        android:id="@+id/instagram_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/snapchat_icon"
        android:layout_alignRight="@+id/twitter_icon"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="34dp"
        android:onClick="openInstagram"
        android:src="@drawable/intagram_icon" />

    <ImageView
        android:id="@+id/facebook_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/instagram_icon"
        android:layout_alignRight="@+id/lines"
        android:layout_marginBottom="50dp"
        android:onClick="openFacebook"
        android:src="@drawable/fb_icon" />

</RelativeLayout>